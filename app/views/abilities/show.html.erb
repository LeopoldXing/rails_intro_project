<section class="mt-12 w-full">
  <h1 class="text-2xl font-bold tracking-tight text-gray-900 sm:text-6xl"><%= @ability.name %></h1>
  <% if @ability.present? %>
    <!-- Ability Details -->
    <div class="mt-12">
      <p><strong>ID:</strong> <%= @ability.id %></p>
      <p><strong>Name:</strong> <%= @ability.name %></p>
    </div>

    <!-- Pokémon with this Ability -->
    <div class="mt-12">
      <h2 class="text-xl font-semibold text-gray-800">Pokémon with this Ability</h2>

      <% if @ability.pokemons.any? %>
        <%= render "shared/pokemon_list", pokemons: @ability.pokemons %>
      <% else %>
        <p class="text-gray-600 mt-4">No Pokémon has this ability.</p>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-600">Ability not found.</p>
  <% end %>
</section>
